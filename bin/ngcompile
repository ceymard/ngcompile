#!/usr/bin/env node

var path = require('path');

var argv = require('optimist').argv;
var ngcompile = require('../lib/__module__');

var b = new ngcompile.Bundler();

b.addDir('.');

if (!argv._[0])
	throw Error('You need to provide an application name !');

var cwd = process.cwd();

b.addBundle({
	appname: argv._[0],
	outfile: path.join(cwd, argv.out || '_default.js'),
	simplified: path.join(cwd, argv.simple || null),
	base: argv.base || '.',
	cwd: cwd
});

b.bundleAll();
